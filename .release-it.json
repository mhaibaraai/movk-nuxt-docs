{
  "$schema": "https://unpkg.com/release-it@19/schema/release-it.json",
  "git": {
    "requireCleanWorkingDir": false,
    "commitMessage": "chore(release): v${version}",
    "tagName": "v${version}"
  },
  "npm": {
    "publish": false,
    "allowSameVersion": true,
    "ignoreVersion": true
  },
  "github": {
    "release": true,
    "releaseName": "Release v${version}",
    "web": true
  },
  "hooks": {
    "before:init": [
      "nr lint"
    ],
    "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits",
        "types": [
          { "type": "feat", "section": "âœ¨ Features" },
          { "type": "fix", "section": "ğŸ› Bug Fixes" },
          { "type": "docs", "section": "ğŸ“š Documentation" },
          { "type": "style", "section": "ğŸ’„ Styles" },
          { "type": "refactor", "section": "â™»ï¸ Code Refactoring" },
          { "type": "perf", "section": "âš¡ Performance Improvements" },
          { "type": "test", "section": "âœ… Tests" },
          { "type": "build", "section": "ğŸ“¦ Build System" },
          { "type": "ci", "section": "ğŸ‘· CI" },
          { "type": "chore", "section": "ğŸ”§ Chores" }
        ]
      },
      "infile": "CHANGELOG.md",
      "header": "# ğŸ“‹ Changelog",
      "ignoreRecommendedBump": true,
      "gitRawCommitsOpts": {
        "path": "."
      },
      "parserOpts": {
        "headerPattern": "^(?:(?:[\\uD83C-\\uDBFF\\uDC00-\\uDFFF]|[\\u2600-\\u27BF])+\\s+)?(\\w+)(?:\\(([^)]*)\\))?!?:\\s(.+)$",
        "headerCorrespondence": ["type", "scope", "subject"]
      }
    }
  }
}
