{
  "git": false,
  "github": false,
  "hooks": {
    "before:init": ["node scripts/copy-readme.js", "pnpm lint", "pnpm typecheck"],
    "after:release": ["node scripts/remove-layer-readme.js"]
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/bumper": {
      "in": "./layer/package.json",
      "out": "./layer/package.json"
    }
  }
} 
